<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.rushapp.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >

        <action
            android:id="@+id/action_splashScreen_to_loginScreen2"
            app:destination="@id/loginScreen"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginScreen"
        android:name="com.example.rushapp.LoginScreen"
        android:label="fragment_login_screen"
        tools:layout="@layout/fragment_login_screen" >
        <action
            android:id="@+id/action_loginScreen_to_registerScreen"
            app:destination="@id/registerScreen" />
        <action
            android:id="@+id/action_loginScreen_to_customerHomePage"
            app:destination="@id/customerHomePage" />
        <action
            android:id="@+id/action_loginScreen_to_providerHomePage"
            app:destination="@id/providerHomePage" />
    </fragment>
    <fragment
        android:id="@+id/registerScreen"
        android:name="com.example.rushapp.RegisterScreen"
        android:label="fragment_register_screen"
        tools:layout="@layout/fragment_register_screen" >
        <action
            android:id="@+id/action_registerScreen_to_customerHomePage"
            app:destination="@id/customerHomePage"
            app:launchSingleTop="false"
            app:popUpTo="@id/registerScreen"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerScreen_to_providerHomePage"
            app:destination="@id/providerHomePage" />
    </fragment>
    <fragment
        android:id="@+id/customerHomePage"
        android:name="com.example.rushapp.CustomerHomePage"
        android:label="fragment_customer_home_page"
        tools:layout="@layout/fragment_customer_home_page" />
    <fragment
        android:id="@+id/providerHomePage"
        android:name="com.example.rushapp.ProviderHomePage"
        android:label="fragment_provider_home_page"
        tools:layout="@layout/fragment_provider_home_page" />

</navigation>